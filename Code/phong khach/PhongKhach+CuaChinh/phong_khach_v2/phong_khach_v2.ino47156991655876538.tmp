      pos2--;
      motor1_cuachinh.write(pos1);
      motor2_cuachinh.write(pos2);
      delay(20);
    }  
  }
  else {
      while (pos1 != 90) {
      pos1--;
      pos2++;
      motor1_cuachinh.write(pos1);
      motor2_cuachinh.write(pos2);
      delay(20);
    }  
  }
}
